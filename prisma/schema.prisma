generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String? @default("")
  email    String  @unique
  password String
  role     Role    @default(USER)
  address  String? @default("")
}

enum Role {
  ADMIN
  USER
  EDITOR
  SUPER_ADMIN
}

model Token {
  id      Int   @id @default(autoincrement())
  userId  Int   @unique
  token   String @unique
  createdAt DateTime @default(now())
}
