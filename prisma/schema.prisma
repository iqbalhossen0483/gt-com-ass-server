generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int         @id @default(autoincrement())
  name     String?     @default("")
  email    String      @unique
  password String
  role     Role        @default(USER)
  address  String?     @default("")
  status   UserStatus  @default(ACTIVE)
}

enum Role {
  ADMIN
  USER
  EDITOR
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model Token {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  token     String    @unique
  createdAt DateTime  @default(now())
}
